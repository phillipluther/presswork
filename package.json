    "gulp-refresh": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-stylelint": "^4.0.0",
    "normalize.css": "^7.0.0",
    "stylelint-config-standard": "^17.0.0"
